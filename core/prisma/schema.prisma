generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String
  password  String
  image     String?
  createdAt DateTime @default(now())
  username  String   @unique
  games     Game[]
}

model Category {
  id           String       @id @default(cuid())
  slug         String       @unique
  name         String
  sparql       String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  isDynamic    Boolean      @default(false)
  updateSparql String?
  imageUrl     String?
  difficulties Difficulty[]
  entries      Entry[]
  games        Game[]
}

model Difficulty {
  id         String   @id @default(cuid())
  categoryId String
  level      Int
  limit      Int
  category   Category @relation(fields: [categoryId], references: [id])
  games      Game[]
}

model Entry {
  id         String   @id @default(cuid())
  categoryId String
  label      String
  norm       String
  url        String   @unique
  aliases    Alias[]
  category   Category @relation(fields: [categoryId], references: [id])

  @@index([categoryId, norm])
}

model Alias {
  id      String @id @default(cuid())
  entryId String
  label   String
  norm    String
  entry   Entry  @relation(fields: [entryId], references: [id])

  @@index([entryId, norm])
}

model Game {
  id            String     @id @default(cuid())
  username      String
  slug          String
  difficultyId  String
  time          Int
  targetCount   Int
  correct_count Int?
  difficulty    Difficulty @relation(fields: [difficultyId], references: [id], onDelete: Cascade)
  category      Category   @relation(fields: [slug], references: [slug], onDelete: Cascade)
  user          User       @relation(fields: [username], references: [username], onDelete: Cascade)

  @@index([slug, targetCount, time])
}
